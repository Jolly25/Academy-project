<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.corso.filters.LoginFilter</filter-class>
    </filter>
        <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.corso.filters.UserFilter</filter-class>
    </filter>
        <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.corso.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/game</url-pattern>
        <url-pattern>/home_admin</url-pattern>
        <url-pattern>/form_add</url-pattern>
        <url-pattern>/view_matchlist</url-pattern>
    </filter-mapping>
        <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/game</url-pattern>
        <url-pattern>/form_add</url-pattern>
    </filter-mapping>
        <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/home_admin</url-pattern>
        <url-pattern>/view_matchlist</url-pattern>
    </filter-mapping>
</web-app>